{
  "name": "ileap-studio",
  "productName": "iLeap Studio",
  "description": "iLeap Studio",
  "author": {
    "name": "Miguel Jiménez",
    "email": "miguel@uvic.ca",
    "url": "https://migueljimenez.co"
  },
  "repository": "https://github.com/jachinte/ileap-studio",
  "license": "MIT",
  "version": "0.7.0",
  "dependencies": {
    "archiver": "^3.0.0",
    "cross-env": "5.1.6",
    "draft-js": "^0.10.5",
    "electron-is-dev": "0.3.0",
    "electron-log": "^2.2.6",
    "electron-updater": "^3.1.2",
    "extract-zip": "^1.6.7",
    "md5": "^2.2.1",
    "mkdirp": "^0.5.1",
    "pure-uuid": "^1.5.4",
    "rc-tooltip": "^3.7.2",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "react-monaco-editor": "^0.18.0",
    "react-router-dom": "^4.3.1",
    "react-split-pane": "^0.1.84",
    "react-tabs": "^2.3.0",
    "react-textarea-autosize": "^7.0.4",
    "typeface-roboto": "^0.0.54"
  },
  "devDependencies": {
    "concurrently": "3.5.1",
    "electron": "2.0.2",
    "electron-builder": "^20.15.1",
    "prettier": "^1.4.4",
    "react-scripts": "1.1.4",
    "wait-on": "2.1.0"
  },
  "build": {
    "appId": "co.migueljimenez.ileap-studio",
    "publish": {
      "provider": "github",
      "repo": "ileap-studio",
      "owner": "jachinte",
      "vPrefixedTagName": true
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "maintainer": "Miguel Jiménez",
      "vendor": "University of Victoria",
      "category": "Development",
      "target": [
        "AppImage"
      ]
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder -mwl --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  }
}
